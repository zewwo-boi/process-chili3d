{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "description": "The root object that represents the state at a point in time",
  "properties": {
    "id": {
      "description": "Unique identifier for time record",
      "type": "string"
    },
    "children": {
      "description": "Children nodes",
      "type": "array",
      "items": {
        "$ref": "#"
      }
    },
    "data": {
      "type": "object",
      "$ref": "record.schema.json"
    },
    "meta": {
      "description": "Time record metadata",
      "type": "object",
      "properties": {
        "timestamp": {
          "type": "number",
          "description": "ms since epoch (12 AM 1/1/1970 UTC)"
        },
        "label": {
          "type": "string"
        },
        "hesitation": {
          "type": "number",
          "description": "Amount of hesitation [0, 1] before the user committed to the action"
        }
      }
    }
  }
}